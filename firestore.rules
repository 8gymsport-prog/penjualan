/**
 * @fileoverview Firestore Security Rules for Kassa Kilat.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user can only
 * access their own data, with an exception for a 'superadmin' role who can
 * view all user data for management purposes.
 *
 * Data Structure:
 * - /users/{userId}: Stores user account information, including a 'role' field.
 * - /users/{userId}/products/{productId}: Stores product information for each user.
 * - /users/{userId}/transactions/{transactionId}: Stores transaction information for each user.
 * - /chats/{chatId}: Metadata for a chat, includes participants.
 * - /chats/{chatId}/messages/{messageId}: Messages within a chat.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own data.
 * - A 'superadmin' can list and get data for any user.
 * - Public listing of users is allowed for username/email lookup.
 * - Chat access is restricted to participants of the chat.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    /**
     * @description Allows users to manage their own account information.
     * Super admins can view any user's profile.
     * Public read/list is allowed for username lookup on login or chat.
     */
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get: if isSignedIn();
      allow list: if isSignedIn(); 
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their own products.
     * Super admins can list/get any user's products.
     */
    match /users/{userId}/products/{productId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get: if isSignedIn() && (isOwner(userId) || isSuperAdmin());
      allow list: if isSignedIn() && (isOwner(userId) || isSuperAdmin());
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their own transactions.
      * Super admins can list/get any user's transactions.
     */
    match /users/{userId}/transactions/{transactionId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get: if isSignedIn() && (isOwner(userId) || isSuperAdmin());
      allow list: if isSignedIn() && (isOwner(userId) || isSuperAdmin());
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Chat-related rules.
     */
    match /chats/{chatId} {
      // A user is a participant if their UID is in the chatId, OR if they are in the participantIds array of an existing document.
      // This allows access for both existing chats and chats that are about to be created.
      function isParticipant() {
        return request.auth.uid in chatId.split('_') || (resource != null && request.auth.uid in resource.data.participantIds);
      }
      
      // For creation, the user must be one of the participants defined in the new document.
       function isCreatingParticipant() {
        return request.auth.uid in request.resource.data.participantIds;
      }

      // Allow read access if the user is a participant.
      allow get, list: if isSignedIn() && isParticipant();
      allow create: if isSignedIn() && isCreatingParticipant();
      allow update: if isSignedIn() && isParticipant();
      
      // Rules for the 'messages' subcollection
      match /messages/{messageId} {
        // A user can access messages if they have access to the parent chat document.
        allow read, write: if isSignedIn() && isParticipant();
      }
    }
  }
}
